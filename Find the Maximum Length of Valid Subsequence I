class Solution {
public:
    int maximumLength(vector<int>& nums) {
        int n = nums.size();
        int countEven = 0;
        int countOdd = 0;
        int alternative = 1;

        for(int &num : nums)
        {
            if(num%2==0)
            {
                countEven++;
            }
            else
            {
                countOdd++;
            }
        }
        int parity = nums[0]%2;
        for(int i=0;i<n;i++)
        {
            int currParity = nums[i] % 2;
            if(currParity != parity)
            {
                alternative++;
                parity = currParity;
            }
        }
        return max({countEven,countOdd,alternative});
    }
};
